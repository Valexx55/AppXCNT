<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdivinaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:text="ADIVINA UN NÚMERO "
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numeroUsuario"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:hint="Intro Nº"
            android:inputType="number"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botonJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:onClick="intentoAdivina"
            android:text="PRUEBA" />

        <TextView
            android:id="@+id/numVidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textoFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="100dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imagenAdivina"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginVertical="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp" />


    </LinearLayout>
</ScrollView>