<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="60dp"
    android:layout_gravity="center"
    android:id="@+id/maincolor"
    tools:context=".subactividades.ColorSubActivity">

    <!-- Cabecera -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona tu color favorito"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        />

    <!-- Fila 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <View
            android:onClick="colorSeleccionado"
            android:id="@+id/viewRojo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F44336" /> <!-- Rojo -->
        <View
            android:onClick="colorSeleccionado"
            android:id="@+id/viewAzul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2196F3" /> <!-- Azul -->
    </LinearLayout>

    <!-- Fila 2 -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <View
            android:onClick="colorSeleccionado"
            android:id="@+id/viewVerde"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#4CAF50" /> <!-- Verde -->
        <View
            android:onClick="colorSeleccionado"
            android:id="@+id/viewAmarillo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFEB3B" /> <!-- Amarillo -->
    </LinearLayout>

    <!-- Fila 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:onClick="colorSeleccionado"
            android:id="@+id/viewNaranja"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF9800" /> <!-- Naranja -->
        <View
            android:onClick="colorSeleccionado"
            android:id="@+id/viewMorado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#9C27B0" /> <!-- Morado -->
    </LinearLayout>
</LinearLayout>